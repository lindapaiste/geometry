{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "downlevelIteration": false,
    "declaration": true,
    "strict": true,
    "outDir": "lib",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "lib": ["es2019", "dom", "esnext", "es2017.object", "dom.iterable"],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "lib"
  ]
}
